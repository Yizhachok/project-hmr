-
	let
		title = 'Project-X',
		appleTouchIcon = [57, 60, 72, 76, 114, 120, 144, 152, 180],
		androidIcon = [192],
		favIcon = [16, 32, 96];
doctype html
html
	head
		meta(charset="utf-8")
		meta(http-equiv="x-ua-compatible" content="ie=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title= title
		meta(name="description" content=title)
		base(href="/")
		if appleTouchIcon
			each size in appleTouchIcon
				link(rel="apple-touch-icon" sizes=`${size}x${size}` href=`/assets/icon/apple-icon-${size}x${size}.png`)
		if androidIcon
			each size in androidIcon
				link(rel="icon" type="image/png" sizes=`${size}x${size}` href=`/assets/icon/android-icon-${size}x${size}.png`)
		if favIcon
			each size in favIcon
				link(rel="icon" type="image/png" sizes=`${size}x${size}` href=`/assets/icon/favicon-${size}x${size}.png`)
		link(rel="manifest" href="/assets/manifest.json")
		meta(name="msapplication-TileColor" content="#00bcd4")
		meta(name="msapplication-TileImage" content="/assets/icon/ms-icon-144x144.png")
		meta(name="theme-color" content="#00bcd4")
	body
		style.
			#loading {
				font-size: 30px;
				padding-top: 20px;
				text-align: center;
				font-family: -apple-system,
				system-ui,
				BlinkMacSystemFont,
				"Segoe UI",
				Roboto,
				"Helvetica Neue",
				Arial,
				sans-serif;
			}
